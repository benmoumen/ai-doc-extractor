# AI Data Extractor - Production Environment Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# AI API KEYS (Required for Production)
# =============================================================================
GROQ_API_KEY=your_production_groq_api_key_here
MISTRAL_API_KEY=your_production_mistral_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
APP_NAME="AI Data Extractor"
APP_VERSION=0.0.1

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================
# API key authentication (REQUIRED for production)
ENABLE_API_KEY_AUTH=true
API_KEYS=your-secure-production-api-key-1,your-secure-production-api-key-2

# File upload limits
MAX_FILE_SIZE_MB=10

# Rate limiting (stricter for production)
RATE_LIMIT_REQUESTS=100

# CORS origins (set to your actual production domains)
CORS_ORIGINS=https://your-internal-domain.com,https://your-company.com

# =============================================================================
# DATABASE CONFIGURATION (SQLite)
# =============================================================================
# SQLite database path (relative to /app/data in container)
DATABASE_PATH=data/schemas.db

# =============================================================================
# LOGGING CONFIGURATION (Production)
# =============================================================================
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/app.log
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=false

# =============================================================================
# PERFORMANCE SETTINGS (Production Optimized)
# =============================================================================
# Image processing
MAX_IMAGE_DIMENSION=4096
IMAGE_COMPRESSION_QUALITY=95
PDF_DPI=200

# Request handling
RESPONSE_TIMEOUT=60
MAX_CONCURRENT_REQUESTS=10

# Caching (in-memory only - no external Redis needed)
CACHE_TTL_SECONDS=3600
ENABLE_RESPONSE_CACHING=true

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
DEFAULT_AI_PROVIDER=groq
DEFAULT_AI_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
AI_TEMPERATURE=0.1
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1.0
AI_REQUEST_TIMEOUT=30

# =============================================================================
# MONITORING & OBSERVABILITY (Simplified for Internal Deployment)
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_TRACING=false
TRACING_SAMPLE_RATE=0.1

# =============================================================================
# DOCKER & DEPLOYMENT SETTINGS
# =============================================================================
# Python settings
PYTHONUNBUFFERED=1

# API server
API_PORT=8000
API_HOST=0.0.0.0

# Frontend URLs (adjust for your internal network)
NEXT_PUBLIC_API_URL=http://your-internal-ip:8000
NEXT_PUBLIC_BACKEND_URL=http://backend:8000

# =============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# =============================================================================
# Before deploying to production:
# 1. ✅ Set real API keys for GROQ_API_KEY and MISTRAL_API_KEY
# 2. ✅ Generate secure API_KEYS using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. ✅ Set proper CORS_ORIGINS for your internal domains
# 4. ✅ Ensure LOG_LEVEL is WARNING or ERROR for production
# 5. ✅ Set ENABLE_API_KEY_AUTH=true
# 6. ✅ Adjust MAX_CONCURRENT_REQUESTS based on your server capacity
# 7. ✅ Test with your internal network configuration
# 8. ✅ Ensure SQLite database directory has proper permissions